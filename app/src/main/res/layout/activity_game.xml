<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".game">
    <TextView
            android:text="Choose Head or Tails?" android:layout_width="match_parent"
            android:layout_height="166dp"
            android:textAlignment="center"
            android:id="@+id/gameq"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="498dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="67dp"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Head" app:layout_constraintEnd_toStartOf="@+id/Tail" android:layout_marginEnd="108dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="583dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="68dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button

            android:text="Tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Tail" android:layout_marginTop="583dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="68dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" android:elevation="0dp"/>
    <TextView
            android:textAlignment="center"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/result" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="255dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>